{
  "name": "@jovulic/lazy-promise",
  "version": "1.1.1",
  "description": "A lazy promise that waits until you ask it to get to work.",
  "type": "module",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js"
  },
  "scripts": {
    "format": "prettier --write ./package.json ./*.mjs ./*.ts ./src/**/*.ts",
    "build": "rm -rf ./dist && tsc --project tsconfig.build.json",
    "test": "vitest run",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jovulic/lazy-promise.git"
  },
  "keywords": [
    "lazy",
    "lazy evaluation",
    "lazy loading",
    "memoization",
    "promise",
    "cache",
    "javascript",
    "typescript",
    "async utilities"
  ],
  "author": "Josip Vulic",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jovulic/lazy-promise/issues"
  },
  "homepage": "https://github.com/jovulic/lazy-promise#readme",
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "eslint": "^9.19.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "vitest": "^3.0.4",
    "prettier": "^3.4.2"
  },
  "files": [
    "dist"
  ],
  "sideEffects": false
}
